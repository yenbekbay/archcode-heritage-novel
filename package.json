{
  "name": "archcode-visual-novel",
  "private": true,
  "description": "",
  "license": "GPL-3.0",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "pnpm generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "pnpm generate:css -- --watch",
    "dev:remix": "remix dev",
    "generate:css": "npx tailwindcss -i ./app/lib/global.css -o ./app/tailwind.css",
    "lint": "eslint --ext .js,.ts,.tsx --cache .",
    "prepare": "husky install",
    "start": "remix-serve build",
    "typecheck": "tsc --project . --noEmit"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,json,yml,yaml}": "prettier --write",
    "**/*.{js,ts,tsx}": "eslint --fix"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "importOrder": [
      "^[^./](.*)\\.fx$",
      "^[./](.*)\\.fx$",
      "<THIRD_PARTY_MODULES>",
      "^[./]"
    ],
    "importOrderCaseInsensitive": true,
    "importOrderSortSpecifiers": true,
    "jsxSingleQuote": false,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss",
      "prettier-plugin-packagejson"
    ],
    "printWidth": 80,
    "quoteProps": "as-needed",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "eslintConfig": {
    "plugins": [
      "codegen"
    ],
    "extends": [
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node"
    ],
    "rules": {
      "prefer-const": "warn",
      "codegen/codegen": "warn",
      "jsx-a11y/alt-text": "off"
    },
    "ignorePatterns": [
      "/api/_build/**",
      "/public/**"
    ]
  },
  "dependencies": {
    "@artsy/fresnel": "3.5.0",
    "@jsonurl/jsonurl": "1.1.6",
    "@radix-ui/react-progress": "0.1.4",
    "@radix-ui/react-separator": "0.1.4",
    "@react-hook/size": "2.1.2",
    "@react-hookz/web": "13.3.0",
    "@remix-run/node": "1.4.1",
    "@remix-run/react": "1.4.1",
    "@remix-run/vercel": "1.4.1",
    "@vercel/node": "1.14.1",
    "clsx": "1.1.1",
    "framer-motion": "6.3.2",
    "load-asset": "1.2.0",
    "phosphor-react": "1.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-keyed-flatten-children": "1.3.0",
    "remeda": "0.0.32",
    "type-fest": "2.12.2"
  },
  "devDependencies": {
    "@remix-run/dev": "1.4.1",
    "@remix-run/eslint-config": "1.4.1",
    "@remix-run/serve": "1.4.1",
    "@tailwindcss/forms": "0.5.0",
    "@tailwindcss/typography": "0.5.2",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@types/tailwindcss": "3.0.10",
    "autoprefixer": "10.4.5",
    "daisyui": "2.14.2",
    "eslint": "8.14.0",
    "eslint-plugin-codegen": "0.16.1",
    "husky": "7.0.4",
    "lint-staged": "12.4.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.12",
    "prettier": "2.6.2",
    "prettier-plugin-packagejson": "2.2.17",
    "prettier-plugin-tailwindcss": "0.1.10",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.3"
  },
  "engines": {
    "node": ">=14"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "17.0.37"
    }
  }
}
