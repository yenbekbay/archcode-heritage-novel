{
  "name": "archcode-visual-novel",
  "private": true,
  "description": "",
  "license": "GPL-3.0",
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev": "remix dev",
    "postinstall": "remix setup node",
    "lint": "eslint --ext .js,.ts,.tsx --cache .",
    "prepare": "husky install",
    "typecheck": "tsc --project . --noEmit"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,json,yml,yaml}": "prettier --write",
    "**/*.{js,ts,tsx}": "eslint --fix"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "importOrder": [
      "^[^./](.*)\\.fx$",
      "^[./](.*)\\.fx$",
      "<THIRD_PARTY_MODULES>",
      "^[./]"
    ],
    "importOrderCaseInsensitive": true,
    "importOrderSortSpecifiers": true,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "quoteProps": "as-needed",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "eslintConfig": {
    "plugins": [
      "codegen"
    ],
    "extends": "@remix-run/eslint-config",
    "rules": {
      "codegen/codegen": "warn"
    },
    "ignorePatterns": [
      "/api/_build/**",
      "/public/**"
    ]
  },
  "dependencies": {
    "@artsy/fresnel": "3.2.1",
    "@jsonurl/jsonurl": "1.1.5",
    "@radix-ui/colors": "0.1.8",
    "@radix-ui/react-progress": "0.1.3",
    "@radix-ui/react-separator": "0.1.3",
    "@react-hook/size": "2.1.2",
    "@remix-run/eslint-config": "1.1.1",
    "@remix-run/react": "1.1.1",
    "@remix-run/serve": "1.1.1",
    "@remix-run/vercel": "1.1.1",
    "@stitches/react": "1.2.6",
    "framer-motion": "5.5.5",
    "load-asset": "1.2.0",
    "modern-normalize": "1.1.0",
    "phosphor-react": "1.4.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-keyed-flatten-children": "1.3.0",
    "remeda": "0.0.32",
    "remix": "1.1.1",
    "type-fest": "2.8.0",
    "usehooks-ts": "2.1.1"
  },
  "devDependencies": {
    "@remix-run/dev": "1.1.1",
    "@trivago/prettier-plugin-sort-imports": "3.1.1",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "eslint": "8.5.0",
    "eslint-plugin-codegen": "0.16.1",
    "husky": "7.0.4",
    "lint-staged": "12.1.2",
    "prettier": "2.5.1",
    "prettier-plugin-packagejson": "2.2.15",
    "typescript": "4.5.4"
  },
  "engines": {
    "node": ">=14"
  }
}
