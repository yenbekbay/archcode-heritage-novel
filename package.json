{
  "name": "archcode-visual-novel",
  "private": true,
  "description": "",
  "license": "GPL-3.0",
  "sideEffects": false,
  "scripts": {
    "build": "run-s --silent build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p --silent dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix dev",
    "generate:css": "tailwindcss -i ./app/lib/global.css -o ./app/tailwind.css",
    "lint": "eslint --ext .js,.ts,.tsx --cache .",
    "prepare": "husky install",
    "start": "remix-serve build",
    "typecheck": "tsc --project . --noEmit"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,json,yml,yaml}": "prettier --write",
    "**/*.{js,ts,tsx}": "eslint --fix"
  },
  "eslintConfig": {
    "plugins": [
      "codegen"
    ],
    "extends": [
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node"
    ],
    "rules": {
      "arrow-body-style": "warn",
      "object-shorthand": "warn",
      "prefer-const": "warn",
      "codegen/codegen": "warn",
      "import/no-unresolved": "error",
      "jsx-a11y/alt-text": "off",
      "react/jsx-curly-brace-presence": "warn"
    },
    "ignorePatterns": [
      "/api/**",
      "/public/**"
    ]
  },
  "dependencies": {
    "@artsy/fresnel": "3.5.0",
    "@jsonurl/jsonurl": "1.1.6",
    "@radix-ui/react-popover": "0.1.6",
    "@react-hook/size": "2.1.2",
    "@react-hookz/web": "14.2.2",
    "@remix-run/node": "1.5.1",
    "@remix-run/react": "1.5.1",
    "@remix-run/vercel": "1.5.1",
    "@vercel/node": "1.15.3",
    "clsx": "1.1.1",
    "framer-motion": "6.3.4",
    "intrinsic-scale": "3.0.4",
    "load-asset": "1.2.0",
    "mitt": "3.0.0",
    "phosphor-react": "1.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-keyed-flatten-children": "1.3.0",
    "remeda": "0.0.35",
    "use-long-press": "2.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "1.5.1",
    "@remix-run/eslint-config": "1.5.1",
    "@remix-run/serve": "1.5.1",
    "@tailwindcss/forms": "0.5.2",
    "@tailwindcss/typography": "0.5.2",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/intrinsic-scale": "3.0.0",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@types/tailwindcss": "3.0.10",
    "autoprefixer": "10.4.7",
    "daisyui": "2.15.1",
    "eslint": "8.16.0",
    "eslint-plugin-codegen": "0.16.1",
    "husky": "8.0.1",
    "lint-staged": "12.4.2",
    "npm-run-all": "4.1.5",
    "patch-package": "6.4.7",
    "postcss": "8.4.14",
    "prettier": "2.6.2",
    "prettier-plugin-packagejson": "2.2.18",
    "prettier-plugin-tailwindcss": "0.1.11",
    "tailwindcss": "3.0.24",
    "tailwindcss-radix": "2.2.0",
    "typescript": "4.7.2"
  },
  "engines": {
    "node": ">=14"
  }
}
